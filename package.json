{
	"name": "taskbookly",
	"private": true,
	"version": "0.4.0",
	"license": "MIT",
	"type": "module",
	"productName": "TaskBookly",
	"author": "CodeDevelops",
	"description": "A time management and focus tool.",
	"main": "dist-electron/electron/main.js",
	"scripts": {
		"transpile:electron": "tsc -p src/electron/tsconfig.json",
		"dev": "npm-run-all --parallel dev:react dev:electron",
		"dev:react": "vite",
		"dev:electron": "npm run transpile:electron && cross-env NODE_ENV=development electron .",
		"build": "tsc -b && vite build",
		"lint": "eslint .",
		"preview": "vite preview",
		"package": "node ./scripts/package.mjs",
		"publish": "npm run package -- --mac --win --publish=always",
		"dist:mac": "npm run package -- --mac --universal",
		"dist:win": "npm run package -- --win --x64",
		"test:mac": "npm run package -- --mac --universal --config.mac.target=dir --publish=never",
		"test:win": "npm run package -- --win --x64 --config.win.target=dir --publish=never"
	},
	"build": {
		"appId": "com.taskbookly.app",
		"artifactName": "${productName}-${version}-${arch}.${ext}",
		"files": [
			"dist-electron",
			"dist-react"
		],
		"extraResources": [
			"dist-electron/electron/preload.cjs"
		],
		"mac": {
			"icon": "build-resources/icons/icon.icns",
			"target": {
				"target": "dmg",
				"arch": [
					"universal"
				]
			},
			"category": "public.app-category.productivity"
		},
		"win": {
			"icon": "build-resources/icons/icon.ico",
			"target": {
				"target": "nsis",
				"arch": [
					"x64",
					"arm64"
				]
			}
		},
		"dmg": {
			"title": "Install ${productName}"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"runAfterFinish": true,
			"shortcutName": "${productName}",
			"uninstallDisplayName": "${productName}",
			"installerSidebar": "build-resources/installer/banners/install.png",
			"uninstallerSidebar": "build-resources/installer/banners/uninstall.png"
		},
		"publish": {
			"provider": "github",
			"owner": "TaskBookly",
			"repo": "app",
			"releaseType": "draft"
		}
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^7.1.0",
		"@fortawesome/free-brands-svg-icons": "^7.1.0",
		"@fortawesome/free-solid-svg-icons": "^7.1.0",
		"@fortawesome/react-fontawesome": "^3.1.0",
		"@xhayper/discord-rpc": "^1.3.0",
		"electron-updater": "^6.7.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.34.0",
		"@types/node": "^24.3.0",
		"@types/react": "^19.1.12",
		"@types/react-dom": "^19.1.9",
		"@vitejs/plugin-react": "^4.7.0",
		"concurrently": "^9.2.1",
		"cross-env": "^7.0.3",
		"electron": "^39.2.7",
		"electron-builder": "^26.4.0",
		"eslint": "^9.39.1",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.24",
		"globals": "^16.3.0",
		"npm-run-all": "^4.1.5",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.39.0",
		"vite": "^7.2.2",
		"wait-on": "^8.0.4"
	}
}
